# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/digital_mart

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=90d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=*

# API URL
API_URL=http://localhost:3000

# =============================================================================
# ADMIN ACCOUNT CONFIGURATION (for deployment initialization)
# =============================================================================
# Set ADMIN_AUTO_CREATE=false to disable auto-creation during deployment

ADMIN_AUTO_CREATE=true

# -----------------------------------------------------------------------------
# Super Admin Account (global administrator)
# -----------------------------------------------------------------------------
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=admin123456
SUPER_ADMIN_FIRST_NAME=Super
SUPER_ADMIN_LAST_NAME=Admin

# -----------------------------------------------------------------------------
# Default Tenant & Shop Admin (created after super admin)
# -----------------------------------------------------------------------------
DEFAULT_TENANT_NAME=Digital Mart
DEFAULT_TENANT_PLAN=professional
DEFAULT_SHOP_ADMIN_EMAIL=shopadmin@example.com
DEFAULT_SHOP_ADMIN_PASSWORD=shopadmin123
DEFAULT_SHOP_ADMIN_NAME=Shop

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Change all default passwords before deploying to production!
# 2. Use strong passwords (at least 12 characters, mix of uppercase, lowercase, numbers, symbols)
# 3. Set unique JWT secrets for each environment
# 4. Never commit .env files to version control
# 5. Consider using a secrets manager in production
# =============================================================================

